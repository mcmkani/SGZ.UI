<syncfusion:ChromelessWindow x:Class="SGZ.AutoRefresh.UI.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="clr-namespace:SGZ.AutoRefresh.UI"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Title="MainWindow"                             
                             Width="525"
                             Height="350"
                             syncfusion:LayoutControl.SetMetroMode="True">

    <syncfusion:ChromelessWindow.DataContext>
        <local:TicketDetailsViewModel />
    </syncfusion:ChromelessWindow.DataContext>

    <!--<syncfusion:ChromelessWindow.Resources>
        <local:TicketDetailsConverter x:Key="ticketDetailsConverter" />
        <local:ChangeForegroundConverter x:Key="changeForegroundConverter" />
    </syncfusion:ChromelessWindow.Resources>-->
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Syncfusion.SfGrid.WPF;component/Styles/Styles.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <syncfusion:LayoutControl HeaderText="Real-time Updates"
                                  HeaderDescriptionText="This sample showcases real-time updates in SfDataGrid."
                                  LayoutMode="Metro"
                                  UserOptionsVisibility="Visible">
            <syncfusion:LayoutControl.GridView>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="Margin" Value="5,0,10,5" />
                                <Setter Property="Foreground" Value="#FF333333" />
                                <Setter Property="FontFamily" Value="Segoe UI" />
                                <Setter Property="FontWeight" Value="Normal" />
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock Margin="15,0,0,0" Text="Timer Frequency : " />
                        <TextBlock Margin="15,0,0,0"
                                   FontWeight="SemiBold"
                                   Foreground="#FF191717">
                            <Run Text="{Binding Value, ElementName=trackTimer}" />
                            <Run Text="ms" />
                        </TextBlock>
                        <TextBlock Margin="15,0,0,0" Text="No of Updates : " />
                        <TextBlock Margin="15,0,0,0"
                                   FontWeight="SemiBold"
                                   Foreground="#FF191717"
                                   Text="10000" />
                    </StackPanel>
                    <syncfusion:SfDataGrid x:Name="datagrid"
                                           Grid.Row="1"
                                           Margin="10,0,30,30"
                                           AllowSorting="False"
                                           AutoGenerateColumns="False"
                                           ColumnSizer="Star"
                                           NavigationMode="Row"
                                           ItemsSource="{Binding listTicketDetails}"
                                           Loaded="datagrid_Loaded"
                                           Unloaded="datagrid_Unloaded">

                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn MappingName="TicketID" TextAlignment="Left" />
                            <syncfusion:GridTextColumn MappingName="Title" />
                            <syncfusion:GridTextColumn MappingName="CreatedDateTime" TextAlignment="Right" />
                            <syncfusion:GridTemplateColumn MappingName="Status" />
                            <!--<syncfusion:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="changeValue"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Center"
                                                       FontSize="14"
                                                       Foreground="{Binding Change,
                                                                            Converter={StaticResource changeForegroundConverter}}"
                                                       Text="{Binding Change}" />

                                        <Path Width="12"
                                                  Height="12"
                                                  Margin="0,0,0,0"
                                                  Data="{Binding Change,
                                                                 Converter={StaticResource TicketDetailsConverter}}"
                                                  Fill="{Binding Foreground,
                                                                 ElementName=changeValue}"
                                                  Stretch="Uniform">
                                            <Path.RenderTransform>
                                                <TransformGroup>
                                                    <TransformGroup.Children>
                                                        <RotateTransform Angle="0" />
                                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                                    </TransformGroup.Children>
                                                </TransformGroup>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>
                                </DataTemplate>
                            </syncfusion:GridTemplateColumn.CellTemplate>-->

                            <syncfusion:GridTextColumn MappingName="PreviousClose" TextAlignment="Right" />
                            <syncfusion:GridTextColumn MappingName="Open" TextAlignment="Right" />
                        </syncfusion:SfDataGrid.Columns>                                                
                    </syncfusion:SfDataGrid>
                </Grid>
            </syncfusion:LayoutControl.GridView>

            <syncfusion:LayoutControl.UserOptionsView>
                <syncfusion:UserOptions Margin="-10,20,0,0" HeaderText="Options:">
                    <StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="12"
                                       FontWeight="Bold"
                                       Text="Timer Frequency:" />
                            <Slider x:Name="trackTimer"
                                    Width="150"
                                    Margin="0,5,0,0"
                                    Maximum="1000"
                                    Minimum="100"
                                    TickFrequency="1"
                                    TickPlacement="None"
                                    Value="{Binding TimeSpanValue,
                                                    Mode=TwoWay}" />
                        </StackPanel>


                        <TextBlock Margin="5"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Text="Start / Stop Timer:" />

                        <Button x:Name="btnTimer"
                                Width="130"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding BtonClick}"
                                Content="{Binding ButtonContnt}" />
                    </StackPanel>
                </syncfusion:UserOptions>
            </syncfusion:LayoutControl.UserOptionsView>
        </syncfusion:LayoutControl>

    </Grid>
</syncfusion:ChromelessWindow>